     \let\protect\@unexpandable@protect
     \ifx\pj@enauthtitle\empty \else
       \edef\@tempa{\string\eartinfo{\pj@enauthtitle}}%
       \@xp\immediate\@xp\write\@xp\@ipnfile\@xp{\@tempa}%
